@model _4._2._1_narudzba.Models.Artikal
@{
    Layout = null;
    Html.EnableClientValidation(false);
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UnesiArtikal</title>
    <style>
        label {
            width: 150px;
            padding-top: 10px;
            display:inline-block;
        }
    </style>
</head>
<body>
    <h3>Unos novog artikla</h3>
    <div>
        <label>Kategorija: </label>
        @Html.DropDownListFor(x => x.Kategorija, new SelectList((string[])ViewBag.Kategorije), "--Kategorija--");
    </div>
    <div>
        <label>Naziv:</label>
        @Html.TextBoxFor(x => x.Naziv)
    </div>
    <div>
        <label>Cijena:</label>
        @Html.TextBoxFor(x => x.Cijena)
    </div>
    <div>
        <label>Količina:</label>
        @Html.TextBoxFor(x => x.Kolicina)
    </div>
    <p>
        <button type="submit">Dodaj!</button>
    </p>
</body>
</html>
