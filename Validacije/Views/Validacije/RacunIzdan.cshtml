@model Validacije.Models.Racun
@{
    ViewBag.Title = "RacunIzdan";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RacunIzdan</title>
    <style>
        label {
            display: inline-block;
            width: 150px;
            margin: 5px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div>
        <h3>Racun @Html.DisplayFor(x => x.BrojRacuna) izdan!</h3>
        <br />
        <h3>Podaci racuna: </h3>
        <hr />
        <div>
            @Html.LabelFor(x=>x.Datum)
            @Html.DisplayFor(x => x.Datum)
        </div>
        <div>
            @Html.LabelFor(x => x.Zaposlenik)
            @Html.DisplayFor(x => x.Zaposlenik)
        </div>
        <div>
            @Html.LabelFor(x => x.Kupac)
            @Html.DisplayFor(x => x.Kupac)
        </div>
        <div>
            @Html.LabelFor(x => x.Cijena)
            @Html.DisplayFor(x => x.Cijena)
        </div>
    </div>
</body>
</html>
