@model Validacije.Models.Racun
@{
    ViewBag.Title = "IzdavanjaRacuna2";
    Html.EnableClientValidation(false);
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IzdavanjaRacuna2</title>
    <style>
        label {
            display: inline-block;
            width: 150px;
            margin: 5px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div>
        <h2>Izdavanje racuna2</h2>
        @using (Html.BeginForm("IzdavanjeRacuna", "Validacije"))
        {
            @Html.ValidationSummary(true)
            <div>
                <label>Broj racuna: </label>
                @Html.EditorFor(x => x.BrojRacuna)
                @Html.ValidationMessageFor(x=>x.BrojRacuna)
            </div>
            <div>
                <label>Datum: </label>
                @Html.EditorFor(x => x.Datum)
                @Html.ValidationMessageFor(x => x.Datum)
            </div>
            <div>
                <label>Zaposlenik: </label>
                @Html.EditorFor(x => x.Zaposlenik)
                @Html.ValidationMessageFor(x => x.Zaposlenik)
            </div>
            <div>
                <label>Kupac: </label>
                @Html.EditorFor(x => x.Kupac)
                @Html.ValidationMessageFor(x => x.Kupac)
            </div>
            <div>
                <label>Cijena: </label>
                @Html.EditorFor(x => x.Cijena)
                @Html.ValidationMessageFor(x => x.Cijena)
            </div>
            <input type="submit" value="Pošalji" />

            <input type="hidden" name="id" value="IzdavanjaRacuna2" />
        }
    </div>
    
</body>
</html>
